---
// Importeer de juiste naam
import MainLayout from '../layouts/MainLayout.astro';

const cyclusInfo = [
  { kaste: "Koningin", ei: "3", larve: "5", pop: "8", totaal: "16", taak: "Eitjes leggen (tot 2000 per dag)." },
  { kaste: "Werkster", ei: "3", larve: "6", pop: "12", totaal: "21", taak: "Huisbij taken en later haalbij." },
  { kaste: "Dar", ei: "3", larve: "6", pop: "15", totaal: "24", taak: "Koningin bevruchten." }
];
---

<MainLayout title="De Levenscyclus van de Bij">
  <main class="max-w-5xl mx-auto px-6 py-12 md:py-24 text-left text-stone-700">
    <header class="mb-16">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 italic text-[#2D2D2D] tracking-tighter">Van ei <span class="text-[#FFB400]">tot bij</span></h1>
      <p class="text-xl italic font-light max-w-2xl text-[#2D2D2D]">Inzicht in de ontwikkeling van de drie kasten in het bijenvolk.</p>
    </header>

    <!-- Ontwikkelingstabel (Dagen) -->
    <section class="mb-20 overflow-x-auto">
      <table class="w-full text-left bento-card overflow-hidden border-collapse">
        <thead class="bg-[#2D2D2D] text-white">
          <tr>
            <th class="p-6 text-[10px] uppercase font-black tracking-widest">Kaste</th>
            <th class="p-6 text-[10px] uppercase font-black tracking-widest text-[#FFB400]">Ei (dagen)</th>
            <th class="p-6 text-[10px] uppercase font-black tracking-widest text-[#FFB400]">Larve (dagen)</th>
            <th class="p-6 text-[10px] uppercase font-black tracking-widest text-[#FFB400]">Pop (dagen)</th>
            <th class="p-6 text-[10px] uppercase font-black tracking-widest">Totaal (dagen)</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          {cyclusInfo.map((item) => (
            <tr class="border-b border-stone-100 last:border-0 hover:bg-stone-50 transition-colors">
              <td class="p-6 font-bold italic text-lg">{item.kaste}</td>
              <td class="p-6 text-stone-500">{item.ei}</td>
              <td class="p-6 text-stone-500">{item.larve}</td>
              <td class="p-6 text-stone-500">{item.pop}</td>
              <td class="p-6 font-black text-[#FFB400] text-xl">{item.totaal}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </section>

    <!-- Taken van de Werkster -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-20">
      <div class="bento-card p-10 bg-[#2D2D2D] text-white">
        <h2 class="text-3xl font-bold mb-6 italic text-[#FFB400]">De 3-Weken Regel</h2>
        <p class="text-stone-300 leading-relaxed mb-8">Een werkbij heeft verschillende taken op basis van haar leeftijd.</p>
        <ul class="space-y-4 text-sm font-medium">
          <li class="flex gap-4 border-l-2 border-[#FFB400] pl-4"><span class="font-black text-[#FFB400]">Dag 1-3:</span> Schoonmaken van cellen</li>
          <li class="flex gap-4 border-l-2 border-white/20 pl-4"><span class="opacity-60">Dag 4-12:</span> Voedsterbij (larven verzorgen)</li>
          <li class="flex gap-4 border-l-2 border-white/20 pl-4"><span class="opacity-60">Dag 13-20:</span> Bouwbij & Wachter (was zweten)</li>
          <li class="flex gap-4 border-l-2 border-[#FFB400] pl-4"><span class="font-black text-[#FFB400]">Dag 21+:</span> Haalbij (nectar, stuifmeel, water)</li>
        </ul>
      </div>

      <div class="flex flex-col gap-6">
        <div class="bento-card p-8 bg-amber-50 flex-1">
          <h3 class="text-xl font-bold mb-4 italic text-[#2D2D2D]">Zomerbij</h3>
          <p class="text-stone-600 text-sm">Leeft slechts <strong>6 weken</strong>. Werkt letterlijk tot haar vleugels versleten zijn door het halen van voedsel.</p>
        </div>
        <div class="bento-card p-8 bg-stone-100 flex-1">
          <h3 class="text-xl font-bold mb-4 italic text-[#2D2D2D]">Winterbij</h3>
          <p class="text-stone-600 text-sm">Leeft <strong>6 maanden</strong>. Ontwikkelt een vetlichaam om de winter door te komen en de koningin warm te houden.</p>
        </div>
      </div>
    </div>

    <footer class="text-center opacity-60 text-[10px] font-black uppercase tracking-[0.2em] mb-12">
        <a href="/samenwerking" class="hover:text-[#FFB400] transition-colors text-[#2D2D2D]">‚Üê Terug naar Samenwerking</a>
    </footer>
  </main>
</MainLayout>
