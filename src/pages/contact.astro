---
import MainLayout from '../layouts/MainLayout.astro';

const lang = "nl";
---
<MainLayout title="Contact" lang={lang}>
	<main class="max-w-5xl mx-auto p-4 md:p-12 text-stone-700 text-left">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start mb-20">
			
			<!-- Linkerkolom: Tekst & Knoppen -->
			<div class="space-y-8">
				<h1 class="text-5xl md:text-6xl font-bold italic leading-tight text-[#2D2D2D]">
					Neem <span class="text-[#FFB400]">Contact</span> op
				</h1>
				<p class="text-xl text-stone-500 italic font-light leading-relaxed">
					Bestel je honing uit Malden of stel een vraag over ecologie en 3D-printing.
				</p>
				
				<div class="flex flex-col gap-4 max-w-xs">
					<!-- Directe email button - GEEL -->
					<a href="mailto:roger@rogershoning.nl" class="flex items-center justify-center gap-3 bg-[#FFB400] text-[#2D2D2D] px-8 py-4 rounded-full text-xs font-black uppercase tracking-widest hover:bg-[#2D2D2D] hover:text-white transition-all shadow-xl">
						ðŸ“§ E-mail Roger
					</a>

					<!-- WhatsApp Button - GROEN -->
					<a href="https://wa.me" target="_blank" class="flex items-center justify-center gap-3 bg-[#25D366] text-white px-8 py-4 rounded-full text-xs font-black uppercase tracking-widest hover:opacity-90 transition-all shadow-xl">
						ðŸ’¬ WhatsApp bericht
					</a>
				</div>
			</div>

			<!-- Rechterkolom: FormSubmit Formulier -->
			<div class="bg-white p-8 md:p-12 rounded-[3.5rem] shadow-2xl border border-stone-100">
				<!-- FormSubmit.co is gratis en onbeperkt -->
				<form action="https://formsubmit.co" method="POST" class="space-y-5">
					
					<!-- Instellingen voor FormSubmit -->
					<input type="hidden" name="_subject" value="Nieuw bericht van RogersHoning.nl" />
					<input type="hidden" name="_template" value="table" />
                    <!-- Zet de captcha uit voor gebruiksgemak (optioneel) -->
                    <input type="hidden" name="_captcha" value="false" />

					<div class="space-y-1">
						<label class="text-[10px] font-black uppercase tracking-widest opacity-40 ml-4">Naam</label>
						<input type="text" name="name" placeholder="Je naam" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400] shadow-inner" />
					</div>

					<div class="space-y-1">
						<label class="text-[10px] font-black uppercase tracking-widest opacity-40 ml-4">E-mailadres</label>
						<input type="email" name="email" placeholder="E-mailadres" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400] shadow-inner" />
					</div>

					<div class="space-y-1">
						<label class="text-[10px] font-black uppercase tracking-widest opacity-40 ml-4">Bericht</label>
						<textarea name="message" placeholder="Je vraag of bestelling" rows="4" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400] shadow-inner resize-none"></textarea>
					</div>

					<button type="submit" class="w-full bg-[#2D2D2D] text-white py-5 rounded-full font-black uppercase text-xs tracking-widest hover:bg-[#FFB400] hover:text-[#2D2D2D] transition-all shadow-xl">
						Verstuur formulier
					</button>
				</form>
			</div>
		</div>

		<!-- Contactgegevens onderaan -->
		<footer class="border-t border-stone-100 pt-8 text-left">
			<div class="flex flex-col md:flex-row gap-4 md:gap-12 opacity-50 text-[10px] font-black uppercase tracking-[0.2em]">
				<p>Roger@rogershoning.nl</p>
				<p>Tel: 0031 6 25 55 70 35</p>
				<p>Malden, Nederland</p>
			</div>
		</footer>
	</main>
</MainLayout>
