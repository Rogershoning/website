---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact">
	<main class="max-w-5xl mx-auto p-4 md:p-12 text-stone-700">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
			<div class="space-y-8">
				<header>
					<h1 class="text-5xl md:text-6xl font-bold mb-6 italic leading-tight text-[#2D2D2D]">Neem <span class="text-[#FFB400]">Contact</span> op</h1>
					<p class="text-xl text-stone-500 italic font-light leading-relaxed">Voor het bestellen van honing uit Malden, advies over biodiversiteit of vragen over maatwerk.</p>
				</header>
				<div class="space-y-4">
					<div class="bg-white p-6 rounded-[2rem] border border-stone-100 shadow-sm flex items-center gap-4">
						<div class="bg-amber-50 h-12 w-12 rounded-full flex items-center justify-center">ğŸ“§</div>
						<div>
							<p class="text-[10px] font-black uppercase tracking-widest text-stone-400">E-mail</p>
							<p class="font-bold text-[#2D2D2D]">roger@rogershoning.nl</p>
						</div>
					</div>
					<div class="bg-blue-50 p-6 rounded-[2rem] border border-blue-100 flex items-center gap-4">
						<div class="text-xl">ğŸ“</div>
						<div>
							<p class="text-[10px] font-black uppercase tracking-widest text-blue-400">Locatie imkerij</p>
							<p class="font-bold text-[#2D2D2D]">Malden, Nederland</p>
						</div>
					</div>
				</div>
			</div>

			<div class="bg-white p-8 md:p-12 rounded-[3rem] shadow-2xl border border-stone-100">
				<!-- data-astro-reload is CRUCIAAL hier -->
				<form action="https://formspree.io" method="POST" data-astro-reload class="space-y-5">
					<input type="text" name="naam" placeholder="Naam" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400]" />
					<input type="email" name="email" placeholder="E-mailadres" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400]" />
					<textarea name="bericht" placeholder="Je vraag of bestelling" rows="5" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400]"></textarea>
					<button type="submit" class="w-full bg-[#2D2D2D] text-white py-5 rounded-2xl font-black uppercase text-xs tracking-[0.2em] hover:bg-[#FFB400] hover:text-[#2D2D2D] transition-all shadow-xl">Verstuur Bericht</button>
				</form>
			</div>
		</div>
	</main>
</MainLayout>
