---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact">
	<main class="max-w-5xl mx-auto p-4 md:p-12 text-stone-700 text-left">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start mb-20">
			
			<!-- Linkerkolom -->
			<div class="space-y-8">
				<h1 class="text-5xl md:text-6xl font-bold italic leading-tight text-[#2D2D2D]">
					Neem <span class="text-[#FFB400]">Contact</span> op
				</h1>
				<p class="text-xl text-stone-500 italic font-light leading-relaxed">
					Bestel je honing uit Malden of stel een vraag over ecologie en 3D-printing.
				</p>
				
				<!-- Directe email button - NU OOK GEEL -->
				<a href="mailto:roger@rogershoning.nl" class="inline-block bg-[#FFB400] text-[#2D2D2D] px-10 py-4 rounded-full text-sm font-black uppercase tracking-widest hover:bg-[#2D2D2D] hover:text-white transition-all shadow-xl">
					Direct e-mailen
				</a>
			</div>

			<!-- Rechterkolom: Formulier -->
			<div class="bg-white p-8 md:p-12 rounded-[3.5rem] shadow-2xl border border-stone-100">
				<!-- We gebruiken nu de standaard Formspree redirect om netwerkfouten te voorkomen -->
				<form action="https://formspree.io" method="POST" class="space-y-5">
					<input type="text" name="name" placeholder="Je naam" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400] shadow-inner" />
					<input type="email" name="email" placeholder="E-mailadres" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400] shadow-inner" />
					<textarea name="message" placeholder="Je vraag of bestelling" rows="5" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400] shadow-inner resize-none"></textarea>
					
					<!-- Formulier Button - GEEL -->
					<button type="submit" class="w-full bg-[#FFB400] text-[#2D2D2D] py-5 rounded-full font-black uppercase text-xs tracking-widest hover:bg-[#2D2D2D] hover:text-white transition-all shadow-xl border-none cursor-pointer">
						Verstuur via formulier
					</button>
				</form>
			</div>
		</div>

		<!-- Contactgegevens onderaan -->
		<footer class="border-t border-stone-100 pt-8 text-left">
			<div class="flex flex-col md:flex-row gap-4 md:gap-12 opacity-50 text-[10px] font-black uppercase tracking-[0.2em]">
				<p>Roger@rogershoning.nl</p>
				<p>Tel: 0031 6 25 55 70 35</p>
				<p>Malden, Nederland</p>
			</div>
		</footer>
	</main>
</MainLayout>
