---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Contact">
	<main class="max-w-5xl mx-auto p-4 md:p-12 text-stone-700">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start text-left">
			<div class="space-y-8 text-left">
				<header>
					<h1 class="text-5xl md:text-6xl font-bold mb-6 italic leading-tight text-[#2D2D2D]">
						Neem <span class="text-[#FFB400]">Contact</span> op
					</h1>
					<p class="text-xl text-stone-500 italic font-light leading-relaxed">Voor bestellingen uit Malden, advies over biodiversiteit of vragen over maatwerk 3D-projecten.</p>
				</header>
				<div class="bg-white p-6 rounded-[2rem] border border-stone-100 shadow-sm flex items-center gap-4 text-left">
					<div class="bg-amber-50 h-12 w-12 rounded-full flex items-center justify-center text-xl">ðŸ“§</div>
					<div class="text-left">
						<p class="text-[10px] font-black uppercase tracking-widest text-stone-400">E-mail</p>
						<p class="font-bold text-[#2D2D2D]">roger@rogershoning.nl</p>
					</div>
				</div>
			</div>

			<div class="bg-white p-8 md:p-12 rounded-[3rem] shadow-2xl border border-stone-100">
				<!-- Geen Astro-snufjes hier, puur HTML voor maximale compatibiliteit -->
				<form action="https://formspree.io" method="POST" class="space-y-5">
					<input type="text" name="name" placeholder="Naam" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400]" />
					<input type="email" name="_replyto" placeholder="E-mailadres" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400]" />
					<textarea name="message" placeholder="Je vraag of bestelling" rows="5" required class="w-full bg-stone-50 border-none rounded-2xl p-4 outline-none focus:ring-2 focus:ring-[#FFB400]"></textarea>
					<button type="submit" class="w-full bg-[#2D2D2D] text-white py-5 rounded-2xl font-black uppercase text-xs tracking-widest hover:bg-[#FFB400] hover:text-[#2D2D2D] transition-all shadow-xl">Verstuur Bericht</button>
				</form>
			</div>
		</div>
	</main>
</MainLayout>

<script is:inline>
  // Dit stopt de Astro-interferentie volledig voor het formulier
  document.addEventListener('submit', (e) => {
    if (e.target.action.includes('formspree.io')) {
      return; // Laat de browser de standaard POST doen
    }
  });
</script>
