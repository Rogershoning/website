    </div>

    <!-- Contact Knoppen -->
    <div class="flex flex-col md:flex-row gap-6 justify-center items-center py-16 border-t border-stone-100">
      <a href="mailto:roger@rogershoning.nl" class="flex flex-col items-center justify-center py-5 px-12 bg-[#FFB400] text-[#2D2D2D] rounded-[2rem] shadow-xl hover:bg-[#2D2D2D] hover:text-white transition-all min-w-[320px] border border-stone-100">
