---
// Rogers Honing - Shop Pagina Redesign
// Kleurenpalet: Goud (#FFB400), Antraciet (#2D2D2D), Crème (#FAF9F6)

const products = [
  {
    id: 1,
    name: "Lindehoning (450g)",
    price: "8.50",
    image: "https://images.unsplash.com",
    platform: "Eigen Shop",
    link: "#" // Link naar je gratis Square/Ecwid product
  },
  {
    id: 2,
    name: "Bijenwas Kaarsen Set",
    price: "12.95",
    image: "https://images.unsplash.com",
    platform: "Etsy",
    link: "https://www.etsy.com" // Je Etsy product link
  },
  {
    id: 3,
    name: "Heidehoning (250g)",
    price: "6.00",
    image: "https://images.unsplash.com",
    platform: "Eigen Shop",
    link: "#"
  }
];
---

<html lang="nl">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Shop | Rogers Honing</title>
		<script src="https://cdn.tailwindcss.com"></script>
        <style>
			@view-transition { navigation: auto; }
            body { background-color: #FAF9F6; color: #2D2D2D; }
        </style>
	</head>
	<body>
		<main class="max-w-6xl mx-auto p-6 md:p-12">
			
			<header class="mb-12">
				<a href="/" class="text-stone-500 hover:text-[#FFB400] transition mb-4 inline-block">← Terug naar Home</a>
				<h1 class="text-5xl font-black tracking-tight">Onze <span class="text-[#FFB400]">Honing</span> & Meer</h1>
				<p class="mt-4 text-stone-600 max-w-xl">Vers uit de kast, puur in de pot. Kies je favoriet en bestel direct via onze vertrouwde partners.</p>
			</header>

			<!-- PRODUCT GRID -->
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
				{products.map((product) => (
					<div class="group bg-white rounded-[32px] p-4 border border-stone-100 hover:border-[#FFB400] transition-all duration-300 shadow-sm hover:shadow-xl">
						<div class="relative overflow-hidden rounded-[24px] aspect-square mb-6">
							<img src={product.image} alt={product.name} class="object-cover w-full h-full group-hover:scale-110 transition duration-500" />
							<div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest">
								{product.platform}
							</div>
						</div>
						
						<div class="px-2 pb-2">
							<h3 class="text-xl font-bold mb-1">{product.name}</h3>
							<p class="text-2xl font-black text-[#2D2D2D] mb-6">€{product.price}</p>
							
							<a href={product.link} target="_blank" class="block text-center bg-[#2D2D2D] text-white py-4 rounded-2xl font-bold group-hover:bg-[#FFB400] group-hover:text-[#2D2D2D] transition-colors duration-300">
								Bestellen
							</a>
						</div>
					</div>
				))}
			</div>

			<!-- GRATIS VERZENDING BANNER -->
			<div class="mt-16 bg-stone-900 text-white rounded-[40px] p-8 md:p-12 flex flex-col md:flex-row items-center justify-between">
				<div>
					<h2 class="text-2xl font-bold mb-2">Lokale bezorging mogelijk?</h2>
					<p class="text-stone-400">In de regio West-Brabant bezorgen we vaak zelf voor een kleine vergoeding.</p>
				</div>
				<button class="mt-6 md:mt-0 border-2 border-white/20 hover:border-white px-8 py-3 rounded-full transition">Stuur een bericht</button>
			</div>

		</main>
	</body>
</html>
