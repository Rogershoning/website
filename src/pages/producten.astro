---
import MainLayout from '../layouts/MainLayout.astro';
const producten = [
  { naam: "Voorjaarshoning", prijs: "7,50", label: "Zacht & Romig" },
  { naam: "Lindehoning", prijs: "8,50", label: "Fris & Geurig" },
  { naam: "Heidehoning", prijs: "9,50", label: "Krachtig & Uniek" }
];
---
<MainLayout title="Producten">
	<main class="max-w-5xl mx-auto p-4">
		<h1 class="text-4xl font-black mb-12">Onze <span class="text-[#FFB400]">Producten</span></h1>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			{producten.map(p => (
				<div class="bento-card p-8 flex flex-col">
					<span class="text-xs font-bold text-amber-600 mb-2 uppercase">{p.label}</span>
					<h2 class="text-2xl font-black mb-4">{p.naam}</h2>
					<div class="text-4xl font-light mb-8">â‚¬{p.prijs}</div>
					<a href="/contact" class="mt-auto bg-[#2D2D2D] text-white text-center py-3 rounded-2xl font-bold hover:bg-[#FFB400] hover:text-[#2D2D2D] transition">Bestellen</a>
				</div>
			))}
		</div>
	</main>
</MainLayout>
