---
import { ViewTransitions } from 'astro:transitions';
const { title, lang = "nl" } = Astro.props;
---
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Rogers Honing</title>
		<ViewTransitions />
		<link href="https://fonts.googleapis.com" rel="stylesheet">
		<script src="https://cdn.tailwindcss.com"></script>
		<style is:global>
			h1, h2, h3 { font-family: 'EB Garamond', serif; }
			body { font-family: 'Inter', sans-serif; background-color: #FAF9F6; color: #2D2D2D; -webkit-font-smoothing: antialiased; }
			.bento-card { background: white; border-radius: 2.5rem; border: 1px solid rgba(0,0,0,0.05); }
		</style>
	</head>
	<body>
		<nav class="max-w-6xl mx-auto p-4 md:p-6 flex justify-between items-center sticky top-0 z-40 bg-[#FAF9F6]/90 backdrop-blur-md">
			<a href="/" class="shrink-0 transition-transform hover:scale-105">
				<img src="/images/5FA62AE0-4CDE-4117-BEFE-F699BC70CA6E.png" alt="Logo" class="h-12 md:h-16 w-auto" />
			</a>
			<div class="flex gap-4 md:gap-8 text-[10px] md:text-xs font-black uppercase tracking-widest items-center">
				<a href="/producten" class="hover:text-[#FFB400]">Winkel</a>
				<a href="/diensten" class="hover:text-[#FFB400]">Diensten</a>
				<a href="/samenwerking" class="hover:text-[#FFB400]">Samenwerking</a>
				<!-- data-astro-reload is hier VERPLICHT voor Formspree -->
				<a href="/contact" data-astro-reload class="bg-[#2D2D2D] text-white px-4 py-2 rounded-full hover:bg-[#FFB400] hover:text-[#2D2D2D] transition-all">Contact</a>
			</div>
		</nav>
		<slot />
	</body>
</html>
