---
import { ViewTransitions } from 'astro:transitions';
const { title, lang = "nl" } = Astro.props;
---
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Rogers Honing</title>
		<ViewTransitions />
		<link href="https://fonts.googleapis.com" rel="stylesheet">
		<script src="https://cdn.tailwindcss.com"></script>
		<style is:global>
			h1, h2, h3 { font-family: 'EB Garamond', serif; }
			body { font-family: 'Inter', sans-serif; background-color: #FAF9F6; color: #2D2D2D; }
			.bento-card { background: white; border-radius: 2rem; border: 1px solid rgba(0,0,0,0.05); }
			img { max-width: 100%; height: auto; }
		</style>
	</head>
	<body>
		<nav class="max-w-6xl mx-auto p-4 md:p-6 flex flex-wrap justify-between items-center sticky top-0 z-40 bg-[#FAF9F6]/90 backdrop-blur-md">
			<a href="/" class="flex items-center gap-2">
				<img src="/images/logo.png" alt="Logo" class="h-10 md:h-14 w-auto" />
			</a>
			
			<!-- Mobile Scroll Menu -->
			<div class="flex gap-4 md:gap-8 text-[10px] md:text-xs font-black uppercase tracking-widest overflow-x-auto no-scrollbar py-2">
				<a href="/producten" class="whitespace-nowrap hover:text-[#FFB400]">Winkel</a>
				<a href="/diensten" class="whitespace-nowrap hover:text-[#FFB400]">Diensten</a>
				<a href="/samenwerking" class="whitespace-nowrap hover:text-[#FFB400]">Samenwerking</a>
				<a href="/contact" class="whitespace-nowrap bg-[#2D2D2D] text-white px-4 py-1 rounded-full">Contact</a>
				
				<!-- Werkende Taalschakelaar -->
				<div class="relative group border-l pl-4 border-stone-200">
					<button class="flex items-center gap-1 uppercase">{lang}</button>
					<div class="absolute right-0 mt-2 w-24 hidden group-hover:block bg-white border rounded-xl shadow-xl p-2 normal-case">
						<a href="/" class="block p-2 hover:bg-amber-50">Nederlands</a>
						<a href="/en/" class="block p-2 hover:bg-amber-50">English</a>
						<a href="/de/" class="block p-2 hover:bg-amber-50">Deutsch</a>
						<a href="/si/" class="block p-2 hover:bg-amber-50">Slovenščina</a>
					</div>
				</div>
			</div>
		</nav>

		<slot />

		<footer class="p-12 text-center opacity-40 text-[10px] uppercase tracking-widest">
			&copy; 2026 Rogers Honing - Hydrologie & Ecologie
		</footer>
	</body>
</html>
